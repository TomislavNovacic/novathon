<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tnovacic.novathon.Activity2">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898"
        app:srcCompat="@drawable/btn_random_scan_clear" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintRight_toLeftOf="@+id/food_num"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        app:layout_constraintHorizontal_bias="0.229" />

    <TextView
        android:id="@+id/drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Drinks"
        app:layout_constraintRight_toLeftOf="@+id/drink_num"
        android:layout_marginRight="142dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/food"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/bills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        app:layout_constraintRight_toLeftOf="@+id/bills_num"
        android:layout_marginRight="155dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/drinks"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/Fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel"
        app:layout_constraintRight_toLeftOf="@+id/fuel_num"
        android:layout_marginRight="156dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bills"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/Other_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other expenses"
        app:layout_constraintRight_toLeftOf="@+id/other_num"
        android:layout_marginRight="83dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/Fuel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        app:layout_constraintRight_toLeftOf="@+id/total_num"
        android:layout_marginRight="137dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Other_expenses"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        app:layout_constraintRight_toLeftOf="@+id/rem_num"
        android:layout_marginRight="118dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/total"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/food_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginRight="126dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/drink_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/food_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/bills_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/drink_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fuel_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/bills_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/other_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/fuel_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/other_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/rem_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/total_num"
        android:layout_marginRight="127dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
